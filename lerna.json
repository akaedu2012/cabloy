{
  "version": "independent",
  "packages": [
    "packages/*",
    "src/module/*",
    "src/module-system/*",
    "src/module-vendor/*",
    "src/suite/*/modules/*",
    "src/suite-vendor/*/modules/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": "**"
    },
    "publish": {
      "ignoreChanges": [
        "src/module/**",
        "src/suite/**",
        "src/module-vendor/**",
        "src/suite-vendor/**",
        "src/module-system/**"
      ]
    }
  }
}
