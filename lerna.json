{
  "version": "independent",
  "packages": [
    "packages/*",
    "src/module/*",
    "src/module-system/*",
    "src/module-vendor/*",
    "src/suite/*/modules/*",
    "src/suite-vendor/*/modules/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": "**"
    },
    "publish": {
      "ignoreChanges": [
        "src/module/**",
        "src/suite/**",
        "src/module-vendor/**",
        "src/suite-vendor/**",
        "src/module-system/a-themebrilliant/**",
        "src/module-system/a-themehyacinth/**",
        "src/module-system/cms-sitecommunity/**",
        "src/module-system/cms-sitedocumentation/**",
        "src/module-system/cms-themeaws/**",
        "src/module-system/cms-themeblog/**",
        "src/module-system/cms-themecommunity/**",
        "src/module-system/cms-themedocs/**"
      ]
    }
  }
}
