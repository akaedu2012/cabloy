{
  "tags": {
    "allowUnknownTags": false
  },
  "source": {
    "include": ["./src/"],
    "includePattern": ".+\\.js(doc)?$",
    "excludePattern": "(node_modules/|docs/|dist/|\\.min\\.js)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "template": "./node_modules/@zhennann/docdash",
    "encoding": "utf8",
    "destination": "./docs-api/",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}
